<div class="modal-dialogue text-center">
    <div class="col-sm-4 main-section">
        <div class="col-smodal-content">

            <div class="col-12 logo-img">
                <img src="https://orig00.deviantart.net/4ca8/f/2011/186/7/6/zecora_by_pennawings-d3l17ds.jpg">
            </div>

            <div class="col-12 form-input">
                <form id="signup" name="signup" method="post" action="/signup">
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input class="text" name="email" type="email" />
                    </div>
                    <div class="form-group">
                        <label for="firstname">Firstname</label>
                        <input name="firstname" type="text" />
                    </div>
                    <div class="form-group">
                        <label for="lastname">Lastname</label>
                        <input name="lastname" type="text" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="password" type="password" />
                    </div>

                    <input class="btn" type="submit" value="Sign Up" />
                </form>

            </div>

            <div class="col-12 link-part">
                <a href="/signin">Already have an account?</a>
            </div>

        </div>
    </div>
</div>